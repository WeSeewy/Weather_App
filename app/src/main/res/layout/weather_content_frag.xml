<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/detail_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:orientation="horizontal"
        android:visibility="invisible">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="top"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/detail_tmp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="11"
                    android:textColor="@android:color/black"
                    android:textSize="60sp" />

                <TextView
                    android:id="@+id/detail_tmp_unit"
                    android:layout_marginStart="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="top"
                    android:layout_marginTop="20dp"
                    android:text="@string/temp_c"
                    android:textSize="25sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/detail_condi"
                android:layout_marginStart="20dp"
                android:textSize="25sp"
                android:text="多云"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/detail_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:fontFamily="sans-serif-condensed"
                android:text="Dec 4   Tue"
                android:textColor="@color/black"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/detail_loc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:fontFamily="sans-serif-condensed"
                android:text="chang sha"
                android:textSize="20sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/detail_img_condi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:background="@color/lightgray"/>
        </LinearLayout>
</RelativeLayout>
